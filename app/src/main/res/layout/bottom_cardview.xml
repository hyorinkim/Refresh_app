<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:background="@drawable/bottom_img_round_corner"
                android:id="@+id/btmIV"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:src="@drawable/account_circle_deactivate"
                android:layout_marginLeft="30dp"
                android:layout_gravity="left"/>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/bottom_space_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceSearchResultTitle"
                    android:textColor="@color/black"
                    android:text="장소이름"
                    />
                <TextView
                    android:id="@+id/bottom_space_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="장소 간단 설명"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="거리"
                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/bottom_space_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@drawable/bottom_cardview_textview"
                        android:text=" 거리"
                        />
                </LinearLayout>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="가격"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/bottom_space_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@drawable/bottom_cardview_textview"
                        android:text=" 가격"
                        />
                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/like_bt"
                            android:background="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/unactivated_like"/>
                        <ImageButton
                            android:id="@+id/dislike_bt"
                            android:layout_marginLeft="15dp"
                            android:background="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/unactivated_dislike"/>
                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src ="@drawable/long_line"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>